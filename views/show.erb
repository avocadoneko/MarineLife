
<main class="main-wrapper-inner" id="container">
  <div class="container">
    <div class="wrapper-inner">
      <figure class="details-image">
        <img src="<%= @image_path %>" />
      </figure>
      <div class="details-content">
        <section class="inner-left">
          <header>
            <h2>タイトル：<%= @title %></h2>
          </header>
        </section>
        <section class="inner-right">
          <p>説明：<%= @description %></p>
        </section>
      </div>
    </div>
  </div>
</main>